<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektAdamczykPUM.Views.MenuPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource PrimaryColor}">
            <Image Source="LogoYGO.png"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start" />
        <Label Text="Life Counter"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Start"
               FontFamily="serif"
               FontSize="Large"
               ></Label>
            <Button Text="Open Duel Counter!"
         Command="{Binding ToMenuCommand}"
         BackgroundColor="{StaticResource BtnColor}"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
