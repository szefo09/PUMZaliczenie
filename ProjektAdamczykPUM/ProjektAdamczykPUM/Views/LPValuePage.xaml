<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektAdamczykPUM.Views.LPValuePage">
    <StackLayout>
        <Entry Keyboard="Numeric" HorizontalTextAlignment="Center" Text="{Binding Amount, Mode=OneWayToSource}" FontSize="Medium" VerticalOptions="Start" MaxLength="6" />
        <Label Text="{Binding Sign}" FontSize="Large"
               VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" />
        <Button Text="Confirm"
                Command="{Binding LpChange}"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            ></Button>
    </StackLayout>
</ContentPage>